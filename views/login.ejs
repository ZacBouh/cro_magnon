<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Connexion</title>
  <link rel="stylesheet" href="/public/css/style.css">
</head>
<body>

  <header style="background-color: #f5f5f5; padding: 15px 30px; display: flex; justify-content: space-between; align-items: center;">
    <div>
      <a href="/" style="text-decoration: none; color: black;">
        <h1>Cro-Magnon</h1>
      </a>
    </div>
    <nav>
      <ul style="list-style: none; display: flex; gap: 20px; margin: 0; padding: 0;">
        <li>
          <a href="/" style="text-decoration: none; color: #333;">Articles</a>
        </li>
      </ul>
    </nav>
  </header>


  <div class="form-container">
    <h1>Connexion</h1>

    <form id="articleForm" enctype="multipart/form-data">
      <label>
        Email
        <input type="text" name="email" required>
      </label>

      <label>
        Mot de passe
        <input type="password" name="password" required>
      </label>

      <button type="submit">Valider</button>
      <div style="text-align: center; margin-top: 1em;">
        <a href="/register" style="text-decoration: underline; color: #333;">Inscription</a>
      </div>
    </form>
  </div>
  <script type="module">
    import { loginForm } from '/public/js/form.js';

    const form = document.getElementById('articleForm');

    form.addEventListener('submit', (e) => loginForm(e));
  </script>
</body>
</html>