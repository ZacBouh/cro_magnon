<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Liste des articles</title>
</head>
<body>
  <h1>Liste des articles</h1>

  <% if (articles && articles.length > 0) { %>
    <ul>
      <% articles.forEach(article => { %>
        <li>
          <h2><%= article.titre %></h2>
          <p><%= article.description %></p>

          <!-- Bouton Modifier -->
          <form action="/articles/<%= article.id %>/edit" method="GET" style="display:inline;">
            <button type="submit">Modifier</button>
          </form>

          <!-- Bouton Supprimer -->
          <form action="/articles/<%= article.id %>?_method=DELETE" method="POST" style="display:inline;">
            <button type="submit" onclick="return confirm('Supprimer cet article ?')">Supprimer</button>
          </form>
        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <p>Aucun article Ã  afficher.</p>
  <% } %>
</body>
</html>